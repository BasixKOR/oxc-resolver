{
  "compilerOptions": {
    "baseUrl": "./src",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "rewriteRelativeImportExtensions": true,
    "jsx": "react-jsx",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "jsxImportSource": "react"
  },
  "files": ["files"],
  "include": ["include"],
  "exclude": ["exclude"]
}
